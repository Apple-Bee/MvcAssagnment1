@{
    ViewData["Title"] = "Fever Check";
    Layout = "_Layout";
}

<h2>Fever Check</h2>

<form asp-action="FeverCheck" method="post">
    <div>
        <label for="temperature">Enter your temperature:</label>
        <input type="number" step="0.1" id="temperature" name="temperature" required />
    </div>
    <div>
        <label>Scale:</label>
        <input type="radio" id="celsius" name="scale" value="Celsius" checked />
        <label for="celsius">Celsius</label>
        <input type="radio" id="fahrenheit" name="scale" value="Fahrenheit" />
        <label for="fahrenheit">Fahrenheit</label>
    </div>
    <button type="submit">Check</button>
</form>

@if (ViewBag.Message != null)
{
    <div>
        <p>@ViewBag.Message</p>
    </div>
}

<style>
    form {
        max-width: 400px;
        margin: 20px auto;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    div {
        margin-bottom: 10px;
    }

    label {
        display: inline-block;
        width: 150px;
    }

    input[type="number"] {
        width: 100%;
        padding: 5px;
    }

    button {
        padding: 5px 10px;
        background-color: #007BFF;
        color: white;
        border: none;
        border-radius: 5px;
    }
</style>
