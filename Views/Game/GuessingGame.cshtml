@{
    ViewData["Title"] = "Guessing Game";
    Layout = "_Layout";
}

<h2>@ViewData["Title"]</h2>

<p>@ViewBag.Message</p>

<form asp-action="GuessingGame" method="post">
    <div>
        <label for="guess">Enter your guess:</label>
        <input type="number" id="guess" name="guess" min="1" max="100" required />
    </div>
    <button type="submit">Guess</button>
</form>

@if (ViewBag.GuessCount != null)
{
    <p>Number of guesses: @ViewBag.GuessCount</p>
}

<style>
    form {
        max-width: 400px;
        margin: 20px auto;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    div {
        margin-bottom: 10px;
    }

    label {
        display: inline-block;
        width: 150px;
    }

    input[type="number"] {
        width: 100%;
        padding: 5px;
    }

    button {
        padding: 5px 10px;
        background-color: #007BFF;
        color: white;
        border: none;
        border-radius: 5px;
    }
</style>
