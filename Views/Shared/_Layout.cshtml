<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"] - My MVC App</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <div class="logo">
            <h1>My MVC App</h1>
        </div>
        <nav>
            <ul>
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-controller="Home" asp-action="About">About</a></li>
                <li><a asp-controller="Home" asp-action="Contact">Contact</a></li>
                <li><a asp-controller="Home" asp-action="Projects">Projects</a></li>
                <li><a asp-controller="Doctor" asp-action="FeverCheck">Fever Check</a></li>
                <li><a asp-controller="Game" asp-action="GuessingGame">Guessing Game</a></li>
            </ul>
        </nav>
    </header>
    <div class="container">
        @RenderBody()
    </div>
    <footer>
        <p>&copy; @DateTime.Now.Year - Tim L</p>
    </footer>
</body>
</html>

<style>
    nav ul {
        display: inline;
        list-style-type: none;
        margin: 0;
        padding: 0;
        width: 15%;
        background-color: #dddddd;
        background-color: #f1f1f1;
        height: 100%;  
        overflow: auto; 
    }

    nav li {
        display: inline;
        width: 60px;
        background-color: #dddddd;
    }

    nav a {
        display: inline;
        
        width: 60px;
        background-color: #dddddd;
    }

    nav a:hover{
            background-color: #555;
            color: white;
    }

    nav .active {
        background-color: #04AA6D;
        color: white;
    }

</style>